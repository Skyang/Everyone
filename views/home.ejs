<% include ./header.ejs %>
<style>
    #posts li .col-sm-6 {
        border: solid 1px #e1e8ed;
        padding: 0 15px;
        border-radius: 5px;
        margin-bottom: 5px;
    }

    #posts ul {
        padding: 5px;
        list-style: none;
    }

    .col-md-2 {
        overflow: hidden;
    }
</style>
</head>
<body>
<% if(user){ %>
<% include ./logined/navigator.ejs %>
<% }else{ %>
<% include ./nologin/navbar.ejs %>
<% } %>
<div class="section" ng-app="postsApp" ng-controller="postsController">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <% include ./dataCard.ejs %>
            </div>
            <div class="col-md-9">
                <div id="postsList" class="container">
                    <section id="posts">
                        <ul>
                            <li ng-repeat="post in posts" class="row">
                                <div class="col-sm-6">
                                    <h2>
                                        <a href="/{{ post.id }}/{{ post._id }}">
                                            <span ng-bind="post.object"></span>
                                        </a>
                                    </h2>

                                    <p class="info">
                                        作者：<a href="/u/{{ post.id }}">
                                            <span ng-bind="post.name"></span>
                                        </a>
                                        日期：<span ng-bind="post.time.minute"></span>
                                        评论数：<span ng-bind="post.comments.length"></span>
                                    </p>

                                    <p ng-bind="post.content"></p>
                                </div>
                            </li>
                        </ul>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/lib/jquery-1.9.1.min.js"></script>
<script src="/js/lib/angular-1.3.15/angular.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script src="/js/home.js"></script>
<script src="/js/searchInput.js"></script>
<script src="/js/style.js"></script>
<% include ./footer.ejs %>