<% include ../header.ejs %>
<link rel="stylesheet" href=""/>
</head>
<body ng-app="friendListApp">
<% include navigator.ejs %>
<header>
    <h3><a href="/friend/following">我的关注</a></h3>

    <h3><a href="/friend/follower">关注我的</a></h3>
</header>
<div id="friendList" ng-controller="mainCtrl">
    <!--我的关注-->
    <ul id="followingList">
        <li ng-repeat="friend in followingList">
            <div class="friendDetail">
                <div class="avatar"></div>
                <p><a href="/u/{{ friend }}">{{ friend.name }}</a></p>
                <p>TA的关注：
                    <span>
                        <a href="/u/{{ friend }}">{{ friend.followingCount }}</a>
                    </span>
                </p>
                <p>TA的好友：
                    <span>
                        <a href="/u/{{ friend }}">{{ friend.followerCount }}</a>
                    </span>
                </p>
            </div>
        </li>
    </ul>

    <!--关注我的-->
    <ul id="followerList">
        <li ng-repeat="friend in followerList">
            <div class="friendDetail">
                <div class="avatar"></div>
                <p><a href="/u/{{ friend.id }}">{{ friend.name }}</a></p>

                <p>TA的关注：
                    <span>
                        <a href="/u/{{ friend.id }}/following">{{ friend.followingCount }}</a>
                    </span>
                </p>

                <p>TA的好友：
                    <span>
                        <a href="/u/{{ friend.id }}/follower">{{ friend.followerCount }}</a>
                    </span>
                </p>
            </div>
        </li>
    </ul>
</div>
<script src="/js/lib/jquery-1.9.1.min.js"></script>
<script src="/js/lib/angular-1.3.15/angular.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script src="/js/friend.js"></script>
