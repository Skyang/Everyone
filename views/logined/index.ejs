<% include ../header.ejs %>
</head>
<body>
<% include ./navigator.ejs %>
<div id="postsList">
    <section id="posts" ng-app="postsApp" ng-controller="postsController">
        <ul>
            <li ng-repeat="post in posts">
                <h2>
                    <a href="/{{ post.id }}/{{ post._id }}">{{ post.object }}</a>
                </h2>

                <p class="info">
                    作者：<a href="/u/{{ post.id }}">{{ post.name }}</a>
                    日期：{{ post.time.minute }}
                    评论数：{{ post.comments.length }}
                </p>

                <p>
                    {{ post.content }}
                </p>
            </li>
        </ul>
    </section>
</div>
<script src="/js/lib/jquery-1.9.1.min.js"></script>
<script src="/js/lib/angular-1.3.15/angular.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script src="/js/index.js"></script>
